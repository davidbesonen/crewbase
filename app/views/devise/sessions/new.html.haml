.min-vh-100.d-flex.align-items-center.justify-content-center
  .row.justify-content-center.w-100
    .col-md-4
      = render Shared::CrewbaseLogoTextComponent.new
      .card.mt-3
        .card-body
          %h2.fw-bold.mb-4 Log in
          = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .form-inputs
              = f.input :email,                     
                required: false,                    
                autofocus: true,                    
                input_html: { autocomplete: "email" }
              = f.input :password,                             
                required: false,                               
                input_html: { autocomplete: "current-password" }
              = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
            .form-actions.mt-2.mb-4
              = f.button :submit, "Log in", class: "btn btn-primary w-100"
          = render "devise/shared/links"
